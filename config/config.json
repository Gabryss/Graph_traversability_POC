{
  "pipeline": {
    "run_environment": true,
    "run_graph": true
  },
  "map": {
    "width": 100,
    "height": 100,
    "generator": "cave",
    "use_existing": true
  },
  "perlin": {
    "scale": 30.0,
    "octaves": 3,
    "seed": 0
  },
  "cave": {
    "fill_probability": 0.45,
    "birth_limit": 4,
    "death_limit": 3,
    "steps": 5
  },
  "graph": {
    "neighbor_mode": "8",
    "obstacle_threshold": 0.1,
    "block_size": 2
  },
  "visualization": {
    "sample_step": 4,
    "map_npy_path": "data/traversability_map.npy",
    "env_output_path": "data/traversability_map.png",
    "graph_output_path": "data/traversability_graph_nodes.png",
    "graph_clusters_output_path": "data/traversability_graph_clusters.png",
    "show": false
  }
}
